<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚗️ Lab - Create Source"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="24dp" />

        <!-- NAME CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Name This Source"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/input_source_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., BNN Fire Alerts"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:background="@drawable/bg_edit_text_dark"
                    android:padding="12dp"
                    android:inputType="text" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SOURCE TYPE CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Select Source Type"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radio_source_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_app"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="App"
                        android:textColor="#FFFFFF"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radio_sms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SMS"
                        android:textColor="#FFFFFF" />

                    <RadioButton
                        android:id="@+id/radio_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textColor="#FFFFFF"
                        android:enabled="false" />
                </RadioGroup>

                <Button
                    android:id="@+id/btn_configure_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Configure Source"
                    android:backgroundTint="#4A9EFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- PAYLOAD CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Edit JSON Payload"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/input_json"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:hint="{}"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:background="@drawable/bg_edit_text_dark"
                    android:padding="12dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ENDPOINT CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Select Endpoint"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_endpoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_spinner_dark"
                    android:padding="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CUSTOMIZE CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Customize Card"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Icon:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <GridLayout
                    android:id="@+id/icon_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="5"
                    android:rowCount="2"
                    android:layout_marginBottom="16dp">
                    <!-- Icons will be added programmatically -->
                </GridLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Color:"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <GridLayout
                    android:id="@+id/color_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="6"
                    android:rowCount="2">
                    <!-- Colors will be added programmatically -->
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SAVE BUTTON -->
        <Button
            android:id="@+id/btn_save_source"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="✅ CREATE SOURCE CARD"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#00D980"
            android:textColor="#000000" />

    </LinearLayout>
</ScrollView>

