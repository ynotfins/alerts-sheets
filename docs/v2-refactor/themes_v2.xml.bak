<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Samsung One UI Theme -->
    <style name="Theme.AlertsToSheets" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/samsung_green</item>
        <item name="colorPrimaryVariant">@color/samsung_blue</item>
        <item name="colorOnPrimary">@color/samsung_text_primary</item>
        <item name="colorSecondary">@color/samsung_orange</item>
        <item name="android:windowBackground">@color/samsung_black</item>
        <item name="android:statusBarColor">@color/samsung_black</item>
        <item name="android:navigationBarColor">@color/samsung_black</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/samsung_card_bg</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>
</resources>

