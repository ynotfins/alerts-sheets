<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/apple_bg_gray"
    android:padding="16dp">

    <TextView
        android:id="@+id/text_app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Config: com.package.name"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIELD MAPPINGS"
        android:textColor="@color/apple_text_secondary"
        android:textSize="13sp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp"
        android:layout_marginBottom="24dp">
        
        <LinearLayout
            android:id="@+id/mappings_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
            
        <Button
            android:id="@+id/btn_add_mapping"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Add Mapping"
            android:textColor="@color/apple_blue"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAllCaps="false"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STATIC FIELDS (CONSTANTS)"
        android:textColor="@color/apple_text_secondary"
        android:textSize="13sp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="16dp">
        
        <LinearLayout
            android:id="@+id/static_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <Button
            android:id="@+id/btn_add_static"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Add Constant"
            android:textColor="@color/apple_blue"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAllCaps="false"/>
    </LinearLayout>

</LinearLayout>
