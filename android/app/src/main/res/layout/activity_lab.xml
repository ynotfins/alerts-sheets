<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš—ï¸ Lab - Create/Edit Source"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="24dp" />

        <!-- NAME CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Name This Source"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/input_source_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g., BNN Fire Alerts"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:background="@drawable/bg_edit_text_dark"
                    android:padding="12dp"
                    android:inputType="text" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SOURCE TYPE CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Select Source Type"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <RadioGroup
                    android:id="@+id/radio_source_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_app"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="App"
                        android:textColor="#FFFFFF"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/radio_sms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SMS"
                        android:textColor="#FFFFFF" />
                </RadioGroup>

                <Button
                    android:id="@+id/btn_configure_source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Select App / SMS Number"
                    android:backgroundTint="#4A9EFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TEMPLATE SELECTION CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. Select Template"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <Spinner
                    android:id="@+id/spinner_template"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_spinner_dark"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_save_template"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+ Save as New"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_delete_template"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="ðŸ—‘ï¸ Delete"
                        android:textSize="12sp"
                        android:backgroundTint="#F44336"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <CheckBox
                    android:id="@+id/check_auto_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto-Clean Emojis/Symbols"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- PAYLOAD EDITOR CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4. Edit JSON Payload"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <EditText
                    android:id="@+id/input_json"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:hint="{}"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#888888"
                    android:background="@drawable/bg_edit_text_dark"
                    android:padding="12dp"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/text_variables_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Variables: {{package}}, {{title}}, {{text}}, {{time}}"
                    android:textColor="#888888"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ENDPOINTS CARD (Multiple Selection) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5. Select Endpoints (Fan-Out)"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send to multiple endpoints at once"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:paddingBottom="12dp" />

                <LinearLayout
                    android:id="@+id/endpoints_checkboxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Checkboxes for endpoints will be added programmatically -->
                </LinearLayout>

                <Button
                    android:id="@+id/btn_manage_endpoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Manage Endpoints"
                    android:textSize="12sp"
                    android:textColor="#00D980"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- TESTING CARD -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6. Test Payload"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_test_new"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ§ª Test New"
                        android:textSize="12sp"
                        android:backgroundTint="#4CAF50"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:id="@+id/btn_test_duplicate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="ðŸ”„ Duplicate"
                        android:textSize="12sp"
                        android:backgroundTint="#FF9800"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <Button
                    android:id="@+id/btn_test_dirty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="ðŸ”¥ Dirty Test (Emojis)"
                    android:textSize="12sp"
                    android:backgroundTint="#E91E63"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CUSTOMIZE CARD (Compact with edit buttons) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7. Customize Card Appearance"
                    android:textColor="#00D980"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="8dp" />

                <!-- Icon Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/preview_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_notification"
                        android:tint="#FFFFFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Icon"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp" />

                    <Button
                        android:id="@+id/btn_edit_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœï¸ Edit"
                        android:textSize="12sp"
                        android:backgroundTint="#4A9EFF"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <!-- Color Selection -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:id="@+id/preview_color"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="#4A9EFF" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Color"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp" />

                    <Button
                        android:id="@+id/btn_edit_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¨ Edit"
                        android:textSize="12sp"
                        android:backgroundTint="#4A9EFF"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SAVE BUTTON -->
        <Button
            android:id="@+id/btn_save_source"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="âœ… SAVE SOURCE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#00D980"
            android:textColor="#121212" />

    </LinearLayout>
</ScrollView>
