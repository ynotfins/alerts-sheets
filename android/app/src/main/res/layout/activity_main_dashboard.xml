<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/oneui_background_dark">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_header_gradient"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alerts to Sheets"
            android:textColor="@color/oneui_text_primary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_stats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready"
            android:textColor="@color/oneui_text_secondary"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- PERMANENT CARDS ROW (3 cards in one row) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System"
                android:textColor="@color/oneui_text_secondary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="24dp">

                <!-- LAB CARD -->
                <FrameLayout
                    android:id="@+id/card_lab"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_card_elevated"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_dashboard"
                            android:tint="@color/oneui_accent_blue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lab"
                            android:textColor="@color/oneui_text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- PERMISSIONS CARD -->
                <FrameLayout
                    android:id="@+id/card_permissions"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_card_elevated"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_security"
                            android:tint="@color/oneui_accent_orange" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perms"
                            android:textColor="@color/oneui_text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:id="@+id/dot_permissions"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/bg_status_dot_red"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </FrameLayout>

                <!-- ACTIVITY LOG CARD -->
                <FrameLayout
                    android:id="@+id/card_logs"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="@drawable/bg_card_elevated"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/ripple_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_alert"
                            android:tint="@color/oneui_accent_purple" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logs"
                            android:textColor="@color/oneui_text_primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:id="@+id/dot_logs"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:src="@drawable/bg_status_dot_red"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- DYNAMIC SOURCE CARDS SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/text_sources_header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sources (0)"
                    android:textColor="@color/oneui_text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Create in Lab"
                    android:textColor="@color/oneui_accent_green"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- DYNAMIC CARDS GRID (2 columns) -->
            <GridLayout
                android:id="@+id/grid_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="10">
                <!-- Dynamic source cards added here -->
            </GridLayout>

            <!-- EMPTY STATE (shown when no sources) -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_dashboard"
                    android:tint="@color/oneui_text_secondary"
                    android:alpha="0.3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No sources yet"
                    android:textColor="@color/oneui_text_secondary"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap Lab to create your first source"
                    android:textColor="@color/oneui_text_secondary"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
