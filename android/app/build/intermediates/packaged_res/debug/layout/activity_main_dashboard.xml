<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <!-- Status Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#1E1E1E">

        <TextView
            android:text="AlertsToSheets"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:text="Service Active"
                android:textColor="#00D980"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/text_status"
                android:text="LIVE"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:background="#00D980"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <GridLayout
            android:id="@+id/grid_cards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="20"
            android:alignmentMode="alignMargins"
            android:padding="8dp">

            <!-- PERMANENT CARD: Lab -->
            <FrameLayout
                android:id="@+id/card_lab"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/bg_card_dark"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_dashboard"
                    android:tint="#A855F7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Lab"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="16dp" />
            </FrameLayout>

            <!-- PERMANENT CARD: Permissions -->
            <FrameLayout
                android:id="@+id/card_permissions"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/bg_card_dark"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_security"
                    android:tint="#FF6B6B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Permissions"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="16dp" />

                <ImageView
                    android:id="@+id/dot_permissions"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:tint="#FF0000" />
            </FrameLayout>

            <!-- PERMANENT CARD: Activity Log -->
            <FrameLayout
                android:id="@+id/card_logs"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/bg_card_dark"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_link"
                    android:tint="#4A9EFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:text="Activity Log"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="16dp" />

                <ImageView
                    android:id="@+id/dot_logs"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:tint="#4CAF50" />
            </FrameLayout>

            <!-- Dynamic cards will be added programmatically here -->
        </GridLayout>
    </ScrollView>

    <!-- Bottom Stats -->
    <TextView
        android:id="@+id/text_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monitoring: 0 sources â€¢ Today: 0 sent, 0 failed"
        android:textColor="#888888"
        android:textSize="12sp"
        android:textAlignment="center"
        android:padding="16dp"
        android:background="#1E1E1E" />

</LinearLayout>
