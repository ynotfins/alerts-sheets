<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- OneUI-Inspired Dark Theme -->
    <style name="Theme.AlertsToSheets" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/vibrant_blue</item>
        <item name="colorPrimaryVariant">@color/vibrant_purple</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSecondary">@color/vibrant_teal</item>
        <item name="colorSecondaryVariant">@color/vibrant_green</item>
        <item name="colorOnSecondary">@color/oneui_black</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/oneui_black</item>
        <item name="android:colorBackground">@color/oneui_black</item>
        <item name="colorSurface">@color/oneui_card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status/Navigation Bars -->
        <item name="android:statusBarColor">@color/oneui_black</item>
        <item name="android:navigationBarColor">@color/oneui_black</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Typography -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        
        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/Widget.App.Card</item>
    </style>
    
    <!-- Card Style -->
    <style name="Widget.App.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/oneui_card</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>
