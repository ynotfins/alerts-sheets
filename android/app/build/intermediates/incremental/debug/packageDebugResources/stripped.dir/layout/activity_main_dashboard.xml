<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Status Header with Master Switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_status_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="System Status"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_service_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="â— Service Active"
                android:textColor="#4CAF50"
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_master_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIVE"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_queue_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Queue: Idle"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:layout_marginBottom="16dp" />

    <!-- Grid Layout -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="2"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:useDefaultMargins="true">

        <!-- Card: Apps -->
        <FrameLayout
            android:id="@+id/card_apps"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bg_card_dark"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_apps_card"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/dot_apps"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="#4CAF50" />
        </FrameLayout>

        <!-- Card: SMS -->
        <FrameLayout
            android:id="@+id/card_sms"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bg_card_dark"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sms_card"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/dot_sms"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="#4CAF50" />
        </FrameLayout>

        <!-- Card: Payloads -->
        <FrameLayout
            android:id="@+id/card_config"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bg_card_dark"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_payloads_card"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/dot_payloads"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="#4CAF50" />
        </FrameLayout>

        <!-- Card: Endpoints -->
        <FrameLayout
            android:id="@+id/card_endpoints"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bg_card_dark"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_endpoints_card"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/dot_endpoints"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="#4CAF50" />
        </FrameLayout>

        <!-- Card: Permissions -->
        <FrameLayout
            android:id="@+id/card_permissions"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bg_card_dark"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_permissions_card"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/dot_permissions"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="#FF0000" />
        </FrameLayout>

        <!-- Card: Logs -->
        <FrameLayout
            android:id="@+id/card_logs"
            android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/bg_card_dark"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_activity_logs_card"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/dot_logs"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="top|end"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="#4CAF50" />
        </FrameLayout>

    </GridLayout>

    <!-- Footer Marquee -->
    <TextView
        android:id="@+id/footer_ticker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:padding="16dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="Monitoring: Loading..."
        android:textColor="#FFFFFF" />

</LinearLayout>